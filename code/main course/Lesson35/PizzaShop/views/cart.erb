<h2>Your cart</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>  
      <th>Name</th>
      <th>Price</th>
      <th>Qty</th> 
    </tr> 
  </thead> 
  <tbody>
      <% total_price = 0 %>
      <% total_qty = 0 %>
      <% counter = 0 %>

      <% @items.each do |item| %>

        <% counter = counter + 1 %>
    <tr>
      <th scope="row"><%= counter %></th>   
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price * item[1].to_i%>
    <% total_qty += item[1].to_i %>

    <% end %>


    <tr>
      <td colspan="2"></td>
      <td>Total: <%= total_price %> rub.</td>
      <td><%= total_qty %></td>
    </tr>
  </tbody>
</table>