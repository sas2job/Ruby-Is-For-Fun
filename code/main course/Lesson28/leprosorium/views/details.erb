<h4>Post details:</h4>
<p>
  <%= @row['content'] %> <br />
  <br />
  Added at <%= @row['created_date'] %> <br />
  <br />
</p>
<br />
<h4>Comments:</h4>
<br />
<% @comments.each do |comment| %>

<p>
  <%= comment['content']%>
  <br />
  <span style="font-size: 75%; color: #999;"
    >Added at <%= comment['created_date'] %></span
  >
  <br />
</p>
<hr />

<% end %>

<form action="/details/<%= @row['id'] %>" method="POST">
  <textarea
    name="content"
    class="form-control"
    rows="6"
    placeholder="Type comment text here"
  ></textarea>
  <br />
  <button type="submit" class="btn btn-primary">Add comment</button>
</form>
